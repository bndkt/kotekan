{
  "name": "monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "ncu": "ncu",
    "clean": "rm -rf node_modules && rm bun.lockb && bun install --force",
    "manypkg": "manypkg check",
    "biome": "biome",
    "docker": "bun run docker:build && bun run docker:remove && bun run docker:run",
    "docker:build": "docker build -t kotekan .",
    "docker:remove": "docker rm -f kotekan",
    "docker:run": "docker run -d -p 3000:3000 --name kotekan kotekan",
    "docker:stop": "docker stop kotekan"
  },
  "dependencies": {
    "@biomejs/biome": "1.5.3",
    "@manypkg/cli": "0.21.2",
    "@types/bun": "1.0.8",
    "npm-check-updates": "16.14.15",
    "typescript": "5.3.3"
  }
}