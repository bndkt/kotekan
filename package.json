{
  "name": "monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "ncu": "ncu",
    "clean": "rm -rf node_modules && rm bun.lockb",
    "manypkg": "manypkg check",
    "biome": "biome",
    "docker": "bun run docker:build && bun run docker:run",
    "docker:build": "docker build -t kotekan .",
    "docker:run": "docker run -d -p 3000:3000 kotekan"
  },
  "dependencies": {
    "@biomejs/biome": "1.5.3",
    "@manypkg/cli": "0.21.2",
    "@types/bun": "1.0.7",
    "npm-check-updates": "16.14.15"
  }
}